-- Realistic Exploit-Style Cheat Script for Testing Anti-Cheats

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local hrp = character:WaitForChild("HumanoidRootPart")
local userInputService = game:GetService("UserInputService")
local runService = game:GetService("RunService")

-- UI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "ExploitCheatGui"
screenGui.ResetOnSpawn = false

-- Create Buttons in the Middle of the Screen
local menuFrame = Instance.new("Frame", screenGui)
menuFrame.Size = UDim2.new(0, 200, 0, 300)
menuFrame.Position = UDim2.new(0.5, -100, 0.5, -150)
menuFrame.BackgroundTransparency = 0.5
menuFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

local toggleFlyButton = Instance.new("TextButton", menuFrame)
toggleFlyButton.Size = UDim2.new(0, 180, 0, 50)
toggleFlyButton.Position = UDim2.new(0, 10, 0, 10)
toggleFlyButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
toggleFlyButton.TextColor3 = Color3.new(1, 1, 1)
toggleFlyButton.Text = "Toggle Fly"
toggleFlyButton.Font = Enum.Font.SourceSansBold
toggleFlyButton.TextSize = 18

local toggleTsunamiButton = Instance.new("TextButton", menuFrame)
toggleTsunamiButton.Size = UDim2.new(0, 180, 0, 50)
toggleTsunamiButton.Position = UDim2.new(0, 10, 0, 70)
toggleTsunamiButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
toggleTsunamiButton.TextColor3 = Color3.new(1, 1, 1)
toggleTsunamiButton.Text = "Summon Tsunami"
toggleTsunamiButton.Font = Enum.Font.SourceSansBold
toggleTsunamiButton.TextSize = 18

local menuToggleButton = Instance.new("TextButton", screenGui)
menuToggleButton.Size = UDim2.new(0, 100, 0, 50)
menuToggleButton.Position = UDim2.new(0.5, -50, 0, 10)
menuToggleButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
menuToggleButton.TextColor3 = Color3.new(1, 1, 1)
menuToggleButton.Text = "Toggle Menu"
menuToggleButton.Font = Enum.Font.SourceSansBold
menuToggleButton.TextSize = 18

menuFrame.Visible = false  -- Menu is hidden by default

-- Cheat Variables
local flying = false
local speedHackEnabled = false
local noclip = false
local flightSpeed = 100  -- Speed multiplier for flight
local tsunamiEnabled = false
local bodyVelocity, bodyGyro

-- Flight Mode
local function toggleFlying()
    flying = not flying
    if flying then
        humanoid.PlatformStand = true
        bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.MaxForce = Vector3.new(1e5, 1e5, 1e5)
        bodyVelocity.Velocity = Vector3.zero
        bodyVelocity.Parent = hrp

        bodyGyro = Instance.new("BodyGyro")
        bodyGyro.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
        bodyGyro.CFrame = hrp.CFrame
        bodyGyro.Parent = hrp

        runService.Heartbeat:Connect(function()
            if flying then
                -- Flight controls based on WASD keys (or mobile movement if implemented)
                local direction = hrp.CFrame.LookVector * flightSpeed + Vector3.new(0, 2, 0)
                bodyVelocity.Velocity = direction
                bodyGyro.CFrame = hrp.CFrame
            end
        end)
    else
        humanoid.PlatformStand = false
        if bodyVelocity then bodyVelocity:Destroy() end
        if bodyGyro then bodyGyro:Destroy() end
    end
end

-- Tsunami Generation
local function summonTsunami()
    if not tsunamiEnabled then return end

    -- Create a tsunami effect
    local tsunami = Instance.new("Part")
    tsunami.Size = Vector3.new(100, 10, 100)
    tsunami.Position = Vector3.new(math.random(-500, 500), 500, math.random(-500, 500))
    tsunami.Anchored = true
    tsunami.CanCollide = true
    tsunami.Color = Color3.fromRGB(0, 0, 255)
    tsunami.Parent = game.Workspace

    -- Move the tsunami towards players (or a random direction)
    game:GetService("TweenService"):Create(tsunami, TweenInfo.new(10), {Position = Vector3.new(0, 0, 0)}):Play()

    -- Damaging players in the tsunami's path
    runService.Heartbeat:Connect(function()
        for _, player in pairs(game.Players:GetPlayers()) do
            local dist = (player.Character.HumanoidRootPart.Position - tsunami.Position).Magnitude
            if dist < 100 then
                player:TakeDamage(50)  -- Adjust damage as necessary
            end
        end
    end)
end

-- Button Actions
toggleFlyButton.MouseButton1Click:Connect(toggleFlying)

toggleTsunamiButton.MouseButton1Click:Connect(function()
    tsunamiEnabled = not tsunamiEnabled
    if tsunamiEnabled then
        summonTsunami()
    end
end)

-- Toggle Menu Visibility
menuToggleButton.MouseButton1Click:Connect(function()
    menuFrame.Visible = not menuFrame.Visible
end)
